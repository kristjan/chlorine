<h1>Editing employee</h1>

<% form_for(@employee) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :facebook_uid %><br />
    <%= f.text_field :facebook_uid %>
  </p>
  <p>
    <%= f.label :recruit_id %>
    <%= f.select :recruit_id,
          recruits_for_select(Recruit.to_employ, @employee),
          :include_blank => true %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @employee %> |
<%= link_to 'Back to Employees', employees_path %>
