  <tr>
    <th>Employe</th>
    <th>Recruit</th>
    <th>Activity</th>
    <th>Body</th>
    <th>Score</th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%=h feedback.employe_id %></td>
    <td><%=h feedback.recruit_id %></td>
    <td><%=h feedback.activity_id %></td>
    <td><%=h feedback.body %></td>
    <td><%=h feedback.score %></td>
    <td><%= link_to 'Show', feedback %></td>
    <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
    <td><%= link_to 'Destroy', feedback, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

