<ul>
  <% activity.feedbacks.each do |feedback| %>
    <% next unless activity.has_all_feedback? || feedback.employee == current_user %>
    <a name="<%= feedback_anchor(feedback) %>"></a>
    <li class="clearfix">
      <div>
        <div class="name_and_score <%= feedback.score_tier %>">
          <span class="name"><%=h feedback.employee.name %></span><br />
          <span class="score"><%= feedback.score || '&mdash;' %></span>
        </div>
      </div>
      <h3>
        <%= feedback.summary %>
        <% unless feedback.body.blank? %>
          <%= link_to_function "Details...", "expandFeedback(this)", :class => 'more_link' %>
        <% end %>
      </h3>
      <% unless feedback.body.blank? %>
        <div class="body"><%= brize(feedback.body) %></div>
      <% end %>
    </li>
  <% end %>
</ul>
