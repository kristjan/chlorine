<% @page_title = "Editing recruit" %>

<% form_for(@recruit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :position %>
    <%= f.select :position, positions_for_select,
                 :include_blank => true, :tabindex => 2 %>
  <p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone, :value => phone(@recruit.phone) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @recruit %> |
<%= link_to 'Back', recruits_path %>
