<div id="actions">
  <% activity = @recruit.current_activity %>
  <% if activity && !activity.terminal? %>
    <% if activity.scheduled? %>
      <%= render :partial => 'next_activity_form' %>
    <% else %>
      <%= render :partial => 'schedule_form' %>
    <% end %>
    <%= render :partial => 'reject_form' %>
    <%= render :partial => 'decline_form' %>
  <% end %>
</div>
