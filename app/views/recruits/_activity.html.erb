<table id="activity" class="clearfix">
  <tr>
    <% ['', 'Scheduled For', 'Completed At'].each do |header| %>
      <th><%= header %></th>
    <% end %>
  </tr>
  <% @recruit.activities.each do |activity| %>
    <tr>
      <td class="activity_name"><%= activity.friendly_name %></td>
      <td class"time"><%= activity.scheduled_time.getlocal rescue "-" %></td>
      <td class"time"><%= activity.completed_at.getlocal  rescue "-" %></td>
    </tr>
  <% end %>
</table>
